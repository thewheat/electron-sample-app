{
  "name": "electron-sample-app",
  "version": "0.0.1",
  "description": "A sample Electron app that has shortcuts and IPC between main and index",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl"
  },
  "keywords": [
    "electron", "sample"
  ],
  "author": "Timothy Lim",
  "license": "ISC",
  "devDependencies": {
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "org.thewheatfield.electron.sampleapp",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.1.1",
    "electron-store": "^8.0.1"
  }
}
